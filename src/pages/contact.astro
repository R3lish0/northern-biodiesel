---
import Layout from '../components/Layout.astro';
---

<Layout title="Contact Us">
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center mb-12">Contact EcoFuel BioDiesel</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-semibold mb-6">Get in Touch</h2>
          <p class="text-lg mb-8">
            Have questions about our biodiesel solutions? We're here to help. Fill out the form below or contact us directly using the information provided.
          </p>

          <div class="space-y-6">
            <div>
              <h3 class="text-xl font-semibold mb-2">Address</h3>
              <p class="text-lg">
                123 Green Street<br />
                Eco City, EC 12345
              </p>
            </div>
            <div>
              <h3 class="text-xl font-semibold mb-2">Phone</h3>
              <p class="text-lg">(555) 123-4567</p>
            </div>
            <div>
              <h3 class="text-xl font-semibold mb-2">Email</h3>
              <p class="text-lg">info@ecofuel.com</p>
            </div>
            <div>
              <h3 class="text-xl font-semibold mb-2">Business Hours</h3>
              <p class="text-lg">
                Monday - Friday: 9:00 AM - 6:00 PM<br />
                Saturday: 10:00 AM - 4:00 PM<br />
                Sunday: Closed
              </p>
            </div>
          </div>
        </div>

        <div class="bg-gray-100 p-8 rounded-lg">
          <h2 class="text-2xl font-semibold mb-6">Send us a Message</h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:border-transparent"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:border-transparent"
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-green-800 text-white px-6 py-3 rounded-md font-semibold hover:bg-green-700 transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout> 