---
import Layout from '../components/Layout.astro';
---

<Layout title="Northern Biodiesel - Coming Soon">
	<main class="min-h-screen flex items-center justify-center bg-gradient-to-b from-gray-50 to-gray-100">
		<div class="w-full max-w-3xl mx-auto px-4 py-12 text-center">
			<div class="mb-8">
				<h1 class="text-5xl font-bold text-gray-900 mb-4">Northern Biodiesel</h1>
				<div class="h-1 w-32 bg-green-600 mx-auto rounded-full"></div>
			</div>
			<div class="bg-white p-10 rounded-xl shadow-lg">
				<h2 class="text-3xl font-semibold text-gray-800 mb-6">Coming Soon</h2>
				<p class="text-xl text-gray-700 mb-8">
					New website on the way! Stay tuned for updates.
				</p>
				<div class="border-t border-gray-200 pt-8">
					<p class="text-lg text-gray-600 mb-4">
						Questions? Reach out to us at:
					</p>
					<a href="mailto:tatenewlin@northern-biodiesel.com" 
						class="inline-block text-xl text-blue-600 hover:text-blue-800 font-medium bg-blue-50 px-6 py-3 rounded-lg transition-colors">
						tatenewlin@northern-biodiesel.com
					</a>
				</div>
				<div class="mt-8 flex justify-center space-x-2">
					<div class="animate-pulse">
						<div class="h-2 w-2 bg-gray-300 rounded-full"></div>
					</div>
					<div class="animate-pulse delay-100">
						<div class="h-2 w-2 bg-gray-300 rounded-full"></div>
					</div>
					<div class="animate-pulse delay-200">
						<div class="h-2 w-2 bg-gray-300 rounded-full"></div>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>
